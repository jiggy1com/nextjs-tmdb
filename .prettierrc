{
  "arrowParens": "always",
  "htmlWhitespaceSensitivity": "ignore",
  "bracketSameLine": true,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 80,
  "quoteProps": "as-needed",
  "singleQuote": true,
  "tabWidth": 4,
  "useTabs": true,
  "trailingComma": "all",
  "overrides": [
    {
      "files": [
        "*.jsonc"
      ],
      "options": {
        "trailingComma": "none"
      }
    },
    {
      "files": ["*.scss", "*.module.scss"],
      "options": {
        "bracketSpacing": true,
        "singleQuote": false,
        "trailingComma": "none"
      }
    }
  ]
}


